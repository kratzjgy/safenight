<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Userphone</th>
      <th>Start</th>
      <th>Startpoint</th>
      <th>Goal</th>
      <th>Jobtype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.username %></td>
        <td><%= post.userphone %></td>
        <td><%= post.start %></td>
        <td><%= post.startpoint %></td>
        <td><%= post.goal %></td>
        <td><%= post.jobtype %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
